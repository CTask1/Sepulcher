                "/O2",
                "/DNDEBUG",
                "/MP",
                "/MT",
                "/nologo",
                "/Iinclude\\",
                "/Yupch.h",
                "/Fpbin\\release\\pch.pch",
                "/Febin\\release\\Sepulcher.exe",
                "/Fobin\\release\\",
                "src\\*.cpp",
                "bin\\release\\pch.obj"
            ],
            "problemMatcher": [
                "$msCompile"

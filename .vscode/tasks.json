{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "RPG Build Debug",
            "type": "cppbuild",
            "dependsOn": "PCH Build Debug",
            "command": "cl.exe",
            "args": [
                "/std:c++20",
                "/Zi",
                "/Od",
                "/RTCsu",
                "/W4",
                "/DEBUG",
                "/EHsc",
                "/MP",
                "/nologo",
                "/Iinclude\\",
                "/Yupch.h",
                "/Fpbin\\debug\\pch.pch",
                "/Febin\\debug\\Sepulcher.exe",
                "/Fobin\\debug\\",
                "/Fdbin\\debug\\Sepulcher.pdb",
                "src\\*.cpp",
                "bin\\debug\\pch.obj"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "RPG Build Release",
            "type": "cppbuild",
            "dependsOn": "PCH Build Release",
